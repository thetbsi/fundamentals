#!/usr/bin/env python3

import skilstak.colors as c
import random
try:
    print(c.clear)
    while True:
        print(c.rc() + "Hello " + c.rc() + "World" + "!" +  c.x, end=" ")
except KeyboardInterrupt:
    print("
   
